<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.progression.ProgressionFragment"
    android:background="@color/white">

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/pie_chart"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/legend_first_scheduler"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/legend_first_scheduler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="[scheduler]"
        app:layout_constraintBottom_toTopOf="@+id/legend_third_scheduler"
        app:layout_constraintEnd_toStartOf="@+id/legend_second_scheduler"
        app:layout_constraintStart_toStartOf="parent"
        android:minWidth="100dp"
        android:padding="10dp"/>
    <View android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/shape_explorer_first_scheduler_legend"
        app:layout_constraintStart_toEndOf="@id/legend_first_scheduler"
        app:layout_constraintTop_toTopOf="@id/legend_first_scheduler"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/legend_second_scheduler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="[scheduler]"
        app:layout_constraintBottom_toTopOf="@+id/legend_fourth_scheduler"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/legend_first_scheduler"
        android:minWidth="100dp"
        android:padding="10dp"/>
    <View android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/shape_explorer_second_scheduler_legend"
        app:layout_constraintStart_toEndOf="@id/legend_second_scheduler"
        app:layout_constraintTop_toTopOf="@id/legend_second_scheduler"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/legend_third_scheduler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="[scheduler]"
        app:layout_constraintBottom_toTopOf="@id/legend_no_scheduler"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/legend_fourth_scheduler"
        android:minWidth="100dp"
        android:padding="10dp"/>
    <View android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/shape_explorer_third_scheduler_legend"
        app:layout_constraintStart_toEndOf="@id/legend_third_scheduler"
        app:layout_constraintTop_toTopOf="@id/legend_third_scheduler"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/legend_fourth_scheduler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="[scheduler]"
        app:layout_constraintStart_toEndOf="@id/legend_third_scheduler"
        app:layout_constraintBottom_toTopOf="@id/legend_no_scheduler"
        app:layout_constraintEnd_toEndOf="parent"
        android:minWidth="100dp"
        android:padding="10dp"/>
    <View android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/shape_explorer_fourth_scheduler_legend"
        app:layout_constraintStart_toEndOf="@id/legend_fourth_scheduler"
        app:layout_constraintTop_toTopOf="@id/legend_fourth_scheduler"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/legend_no_scheduler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="[scheduler]"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:minWidth="100dp"
        android:padding="10dp" />
    <View android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/shape_explorer_no_scheduler_legend"
        app:layout_constraintStart_toEndOf="@id/legend_no_scheduler"
        app:layout_constraintTop_toTopOf="@id/legend_no_scheduler" />

</androidx.constraintlayout.widget.ConstraintLayout>